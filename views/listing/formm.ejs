<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
        <h3>Edit Your Listing</h3>
        <form class="needs-validation" novalidate method="post" action="/listings/<%= rt._id %>?_method=PUT" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="text" class="form-label">Title</label>
                 <input type="text" id="text" class="form-control" name="title" value="<%= rt.title %>" required>
                 <div class="valid-feedback">Add a catchy title</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
               <textarea required name="description" id="description" class="form-control"><%=rt.description %></textarea> 
               <div class="invalid-feedback">Description should be valid</div>
            </div>
            <div class="mb-3">
                Original Listing Image
                <img src="<%= original %>" alt="">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image Link</label>
                <input type="file"  id="image" class="form-control" name="image" value="<%= rt.image %>">
            </div>
            <div class="row">
                <div class="mb-3  col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input  required class="form-control" id="price"name="price" value="<%= rt.price %>"> 
                    <div class="invalid-feedback">Price should be valid</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" required class="form-control" id="country" name="country" value="<%= rt.country %>">
                    <div class="invalid-feedback">Country  should be valid</div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text"  required id="location" class="form-ontrol"  name="location" value="<%= rt.location %>">
                <div class="invalid-feedback">Location should be valid</div>
            </div>
            
            <button class="btn btn-dark add-color">Edit</button>
            <br><br>
        </form>
       
</body>