<% layout("/layouts/boilerplate.ejs") %>
<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
  }
  .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top:2rem;
    opacity:0.7
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 2.5 rem;
    margin-top: 1rem;
    margin-left: 2rem;
    padding: 1rem;
  }
  .tax-info{
    display: none;
  }
</style>
<body>
    <!-- <h3>All Listings</h3> -->
    <!-- <form method="get" action="/listings/new">
        <button>Create New Listings</button>
    </form> -->
<div id="filters">
  <div class="tax-toggle ms-auto">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
</div> 
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
<% for(rr of r) { %>
  <a href="/listings/<%= rr._id %>/show" class="listing-link">
    <div class="card col listing-card" >
        <img src=<%=rr.image.url %> class="card-img-top" alt="..." style="height:20rem" >
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= rr.title %> <br></b>
            &#8377;<%= rr.price.toLocaleString("en-IN")  %> / night
            <i class="tax-info"> +18% GST</i>
          </p>
      </div>
    </div>
  </a>
<% } %>
    </div>
    
</body>
<script>
  let on=document.getElementById("flexSwitchCheckDefault")
  on.addEventListener("click",()=>{
    let i=document.getElementsByClassName("tax-info")
    for(ii of i){
      if(ii.style.display !="inline"){
      ii.style.display="inline"
    }
    else{
      ii.style.display="none"
    }
  }
})
</script>